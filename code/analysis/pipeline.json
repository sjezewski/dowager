{
  "pipeline": {
    "name": "train"
  },
  "transform": {
    "image": "sjezewski/dowager_rnn:1",
    "cmd": [ "sh" ],
    "stdin": [
      "mkdir /data",
      "cp /pfs/scripts/* /data",
      "cd /code && python ptb_word_lm.py --data_path=/data --model=test --model_path_prefix=/data",
      "cp /data/ptb.ckpt* /pfs/out",
      "cp /data/*.json /pfs/out"
    ]
  },
  "parallelism_spec": {
       "strategy" : "CONSTANT",
       "constant" : 1
  },
  "inputs": [
    {
      "repo": {
        "name": "scripts"
      },
      "method": "global"
    }
  ]
}
{
  "pipeline": {
    "name": "generate"
  },
  "transform": {
    "image": "sjezewski/dowager_rnn:1",
    "cmd": [ "sh" ],
    "stdin": [
      "mkdir /training_data",
      "cp /pfs/train/ptb.ckpt* /training_data",
      "cp /pfs/train/*.json /training_data",
      "cd /code && python ptb_word_lm.py --model=test --generate=true --model_path_prefix=/training_data > /pfs/out/sentences.txt" 
    ]
  },
  "parallelism_spec": {
       "strategy" : "CONSTANT",
       "constant" : 1
  },
  "inputs": [
    {
      "repo": {
        "name": "train"
      },
      "method": "global"
    }
  ]
}
